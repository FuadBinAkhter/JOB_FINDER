@model JOB_FINDER.Models.USER

@{
    ViewBag.Title = "ViewProfile";
}

<h2>Welcome @Session["Name"] !!!</h2>

<div>
    <h4>Your Profile</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Phone)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phone)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.University)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.University)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Skill)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Skill)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CV)
        </dt>

        <dd>
            @if (@ViewBag.Message != null)
            {
                @ViewBag.Message
            }
            else
            {
                @Html.ActionLink("Download", "Download", "USERs", new { fileName = Model.CV }, null)
            }
        </dd>

    </dl>
</div>

<div class="form-group">
    <div class="col-md-offset-4 col-md-8">
        <h2 style="margin-left: 100;">@Html.ActionLink("SignOut", "SignOut", "USERs")</h2>
    </div>
</div>

<div class="form-group">
    <div class="col-md-offset-4 col-md-8">
        <h2>@Html.ActionLink("EditProfile", "EditProfile", "USERs")</h2>
    </div>
</div>

<div class="form-group">
    <div class="col-md-offset-4 col-md-8">
        <h2>@Html.ActionLink("Update Password", "UpdatePassword", "USERs")</h2>
    </div>
</div>

<div class="form-group">
    <div class="col-md-offset-4 col-md-8">
        <h2 style="margin-left: 100;">@Html.ActionLink("Show Applications", "Index", "APPLICATIONs")</h2>
    </div>
</div>





